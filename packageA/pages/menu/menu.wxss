/* packageA/pages/menu/menu.wxss */
.menu-container {
  width: 95%;
  height: 100vh;
  padding: 5px;
  margin: 0 auto;
}
.menu-container .search {
  display: flex;
  width: 100%;
  height: 55px;
  border: 1px solid black;
}
.menu-container .search .menuImg {
  flex: 1;
  height: 55px;
}
.menu-container .search .weui-input {
  flex: 6;
  height: 55px;
}
.menu-container .search .searchBtn {
  flex: 1;
  font-size: 17px;
  background-color: #ffffff;
  height: 55px;
  border: 0;
  line-height: 55px;
  text-align: center;
}
.menu-container .search .searchBtn::after {
  border: none;
}
.menu-container .content {
  padding-top: 20px;
  height: calc(100vh - 55px);
  background-color: #F5F5F5;
}
.menu-container .error {
  color: red;
  text-align: center;
}
.menu-container .content .contentName {
  color: red;
  text-align: center;
  margin-bottom: 10px;
  font-weight: 700;
}
.menu-container .content .special {
  font-weight: 600;
}
.menu-container .content .menuItem {
  margin-top: 10px;
  margin-bottom: 10px;
}