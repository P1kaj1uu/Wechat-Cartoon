/* pages/my/my.wxss */
/**index.wxss**/
.my-container {
  display: flex;
  flex-direction: column;
  padding: 8px;
}

.txt {
  width: 60%;
  height: 50px;
  line-height: 50px;
}
.my-container .right {
  width: 30px;
  height: 30px;
  transform: scale(0.7);
}

/* 头像 */
.avatar {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100px;
  border-bottom: 1px solid black;
}
.avatar .avatarLogin {
  font-size: 15px;
}
.avatar .avatarImg {
  width: 80px;
  height: 70px;
  border: 1px solid black;
  border-radius: 50%;
}

/* 登录与退出 */
.isLogin {
  display: flex;
