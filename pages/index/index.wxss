/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

/* 搜索框区域 */
.searchBooks {
  width: 90%;
  height: 30px;
  border: 1px solid gray;
  margin: 10px auto;
  margin-bottom: 15px;
  color: #aaa;
  line-height: 30px;
  padding-left: 10px;
  font-size: 13px;
}

/* 排行榜类型 */
.rankList {
  width: 95%;
  margin: auto;
  margin-bottom: 15px;
}
.rankName1 {
  width: 33%;
  font-size: 16px;
  font-weight: 600;
  color: 	#EE82EE;
  border-bottom: 1px solid #aaa;
  margin-bottom: 10px;
}
.epub-list {
  display: flex;
  flex-wrap: wrap;
}
.epub-list .epub-item {
  flex: 33%;
  text-align: center;
  margin-right: 5px;
  margin-bottom: 5px;
  font-size: 15px;
  height: 30px;
  line-height: 30px;
}
.rankName2 {
  width: 43%;
  font-size: 16px;
  font-weight: 600;
  color: 	#DA70D6;
  border-bottom: 1px solid #aaa;
  margin-bottom: 10px;
}
.female-list {
  display: flex;
  flex-wrap: wrap;
}
.female-list .female-item {
  flex: 33%;
  text-align: center;
  margin-right: 5px;
  margin-bottom: 5px;
  font-size: 15px;
}
.rankName3 {
  width: 43%;
  font-size: 16px;
  font-weight: 600;
  color: 	#DDA0DD;
  border-bottom: 1px solid #aaa;
  margin-bottom: 10px;
}
.male-list {
  display: flex;
  flex-wrap: wrap;
}
.male-list .male-item {
  flex: 33%;
  text-align: center;
  margin-right: 5px;
  margin-bottom: 5px;
  font-size: 15px;
}
.recomand-list {
  display: flex;
  flex-wrap: wrap;
}
.recomand-list .recomand-item {
  flex: 33%;
  margin-bottom: 3px;
}
.recomand-list .recomand-item .recomandImg {
  width: 100px;
  height: 100px;
}
.recomand-list .recomand-item .recomandAuthor {
  font-size: 14px;
  font-weight: 600;
  text-align: center;
  width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.recomand-list .recomand-item .recomandSearch {
  font-size: 11px;
  text-align: center;
  width: 100px;
}