/* pages/classify/classify.wxss */
.classifyBox {
  display: flex;
  width: 100vw;
  height: 80px;
  justify-content: space-between;
  border-bottom: 1px solid #aaaaaa;
}
.classifyBox .left {
  width: 50px;
  height: 50px;
}
.classifyBox .left .cover {
  width: 80px;
  height: 80px;
}
.classifyBox .right {
  width: calc(100vw - 80px);
  height: 80px;
  text-indent: .6em;
  position: relative;
}
.classifyBox .right .title {
  font-size: 15px;
  font-weight: 600;
  color: pink;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.classifyBox .right .author {
  font-size: 13px;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.classifyBox .right .shortIntro {
  margin-top: 5px;
  font-size: 13px;
  height: 35px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2;
}
.classifyBox .right .txtKeys1 {
  position: absolute;
  left: -88px;
  bottom: 0px;
  font-size: 10px;
  text-align: center;
  background-color: #D8BFD8;
}
.classifyBox .right .txtKeys2 {
  position: absolute;
  left: -88px;
  bottom: 16px;
  font-size: 10px;
  text-align: center;
  background-color: #D8BFD8;
}